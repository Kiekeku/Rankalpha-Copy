OPENAI_API_KEY=
# Optional: Override model configured in mcp_agent.config.yaml (e.g., o3, gpt-4o, gpt-4o-mini)
OPENAI_MODEL=
# Optional: Use a separate model for the planner only
OPENAI_PLANNER_MODEL=
# Token limits (optional)
# For GPT-5 family models
OPENAI_MAX_COMPLETION_TOKENS=
# For other models
OPENAI_MAX_TOKENS=
# Reasoning controls (optional)
# Disable reasoning entirely to prevent fallback to o3
OPENAI_DISABLE_REASONING=false
# Or set a specific effort (low|medium|high)
OPENAI_REASONING_EFFORT=
# Optional: on-demand run controls
# Set a symbol to run immediately (bypasses schedule)
SENTIMENT_SYMBOL=
# Force reanalysis even if already run today (true/false)
SENTIMENT_FORCE=false
# If true, require SENTIMENT_SYMBOL and exit after one run
SENTIMENT_SINGLE_SYMBOL_ONLY=false
# Enable OpenAI SDK debug logging to stdout (request details)
SENTIMENT_OPENAI_DEBUG=false
# Log full prompts and responses to file (see SENTIMENT_LOG_FILE)
SENTIMENT_LOG_PROMPTS=false

# Paths (override defaults for local runs)
# Base data dir; defaults to /data (container). For local, set to a writable folder.
SENTIMENT_DATA_DIR=
# Or set explicit output/schedule paths:
SENTIMENT_OUTPUT_DIR=
SENTIMENT_SCHEDULE_FILE=

# Optional: prompt/Responses log file (auto-created under DATA_DIR/logs if unset)
SENTIMENT_LOG_FILE=

# Worker output sizes (GPT-5 Responses API)
# Default 8192 each; increase to reduce truncation if needed
SENTIMENT_ANALYST_MAX_TOKENS=
SENTIMENT_WRITER_MAX_TOKENS=
SENTIMENT_ORCHESTRATOR_TIMEOUT_SECONDS=600

# Tool behavior
# Max characters to fetch per fetch() call if model omits it
SENTIMENT_FETCH_MAX_LENGTH=5000
# Max characters to return when converting PDFs to text/markdown (e.g., EDGAR filings)
SENTIMENT_PDF_EXTRACT_MAX_CHARS=200000
# Cache search/fetch tool results (within TTL)
SENTIMENT_TOOL_CACHE=true
# TTL in seconds for cached tool outputs (default 86400 = 24h)
SENTIMENT_TOOL_CACHE_TTL_SECONDS=86400

# Redis cache (preferred; falls back to in-memory if unavailable)
# Use REDIS_URL or host/port/db/password.
REDIS_URL=
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# SEC EDGAR MCP
# Required by the EDGAR MCP server; include name + contact per SEC guidelines
SEC_EDGAR_USER_AGENT=
DATABASE_NAME=
DB_USERNAME=
PASSWORD=
HOST=database
PORT=5432

# Consensus Screener (optional sentiment integration)
# Enable using the latest-day screener consensus view to run a small batch
# of top symbols before (or instead of) the normal scheduled/catalyst loop.
SENTIMENT_USE_CONSENSUS=false
# Minimum breadth to include a symbol in the batch
SENTIMENT_CONSENSUS_MIN_APPEARANCES=
SENTIMENT_CONSENSUS_MIN_STYLES=
# Max number of symbols to run per batch
SENTIMENT_CONSENSUS_LIMIT=
# If true, run only the batch once and exit (useful for Airflow one-off tasks)
SENTIMENT_CONSENSUS_BATCH_ONLY=false

# Re-run guard: skip if last analysis is within N days (default 1 = same day)
SENTIMENT_SKIP_IF_WITHIN_DAYS=1
