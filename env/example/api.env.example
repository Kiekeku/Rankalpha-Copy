# API Service Configuration
API_NAME=RankAlpha Stock Rankings API
API_VERSION=0.1.0
API_DESCRIPTION=FastAPI service for stock analysis and rankings

# Database Configuration
DATABASE_NAME=
DB_USERNAME=
PASSWORD=
HOST=database
PORT=5432

# Redis Cache Configuration
REDIS_HOST=cache
REDIS_PORT=6379

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=6080
API_WORKERS=1

# Security
SECRET_KEY=dev-only-change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
# Update this list to include all frontend origins that should be allowed
# The FastAPI app currently defaults to allowing http://localhost:3000 and http://localhost:3001
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Application Settings
ENVIRONMENT=development
DEBUG=true
RELOAD=true

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Pagination Defaults
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=500

# Score Calculation Weights
MOMENTUM_WEIGHT=0.35
VALUE_WEIGHT=0.35
SENTIMENT_WEIGHT=0.30

# Cache TTL (Time To Live) in seconds
CACHE_TTL_RANKINGS=300      # 5 minutes
CACHE_TTL_STOCK_DETAIL=600  # 10 minutes
CACHE_TTL_TOP_PERFORMERS=300 # 5 minutes
